<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>            
        </Grid.ColumnDefinitions>

        <!-- Left: Tic-Tac-Toe UI -->
        <Border Grid.Column="0" Padding="12" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="6" Background="#FFF8F8F8">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Tic‑Tac‑Toe" FontSize="22" FontWeight="Bold" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Player:" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PlayerIndicatorTextBlock" Text="X" FontWeight="Bold" Margin="6,0,0,0"/>
                        <Button x:Name="StartGame" Content="Start Game" Click="StartGameClicked" Width="90" Height="30" Margin="12,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Board -->
                <UniformGrid Rows="3" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6,0,6">
                    <Button x:Name="Cell00" Content="" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell01" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell02" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>

                    <Button x:Name="Cell10" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell11" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell12" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>

                    <Button x:Name="Cell20" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell21" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                    <Button x:Name="Cell22" FontSize="36" Width="120" Height="120" Margin="4" Click="Cell_Clicked"/>
                </UniformGrid>

                <TextBlock x:Name="StatusTextBlock" DockPanel.Dock="Bottom" Text="Status: Ready" Margin="0,8,0,0" FontStyle="Italic"/>
            </DockPanel>
        </Border>

